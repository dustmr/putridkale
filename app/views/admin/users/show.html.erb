<div class="container-bg-box">
  <h2 class="edit-user"><%= @user.full_name %></h2>
  <hr>
  <p class="user-details">Email: <%= @user.email %></p>
  <p class="user-details">Admin: <%= @user.admin? %></p>
  <p class="user-details">Created at: <%= @user.created_at %></p>
  <hr>
  <%= link_to "Edit details", edit_admin_user_path(@user) %><br>
  <%= link_to "Delete user", admin_user_path(@user), method: :delete, :data => {:confirm => 'Are you sure?'} %>
</div>