<%= form_tag("/search", method: "get") do %>
<div>
  <%= label_tag(:search, "Search:") %>
  <%= text_field_tag(:search) %>
</div>
<div>
  <%= label_tag(:duration, "Duration:") %>
  <%= select_tag(:duration, 
    options_for_select([
    ['Under 90 minutes', 1],
    ['Between 90 and 120 minutes', 2],
    ['Over 120 minutes', 3]
    ]), 
    prompt: "Please select a duration:"
    ) %>
</div>
  <%= submit_tag("Search") %>
<% end %>

<% if @movies %>
  <% @movies.each do |movie| %>
    <%= image_tag movie.poster.thumb.url %>
  <%= link_to image_tag(movie.poster_image_url), movie_path(movie) %>
  <h2><%= link_to movie.title, movie_path(movie) %> | <%= movie.review_average %>/10</h2>
  <h3><%= formatted_date(movie.release_date) %></h3>
  <h4>Dir. <%= movie.director %> | <%= movie.runtime_in_minutes %> minutes</h4>
  <p><%= movie.description %></p>
  <hr>
  <% end %>
<% else %>
  No movies found
<% end %>
