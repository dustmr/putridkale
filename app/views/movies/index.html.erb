<ul class="large-block-grid-4">
<% @movies.each do |movie| %>
  <li class="movie-container"><div class="thumb-align"><%= link_to image_tag(movie.poster_image_url), movie_path(movie) %></div>
  <h3><%= link_to movie.title, movie_path(movie) %></h3> <span style="position: relative; top: -245px; float: right; right: 5%; font-size: .75em;"class="round alert label">  <%= movie.review_average %>/10</span>
  <h5 class="date"><%= formatted_date(movie.release_date) %></h5>
  <h4 class="director">Dir. <%= movie.director %> | <%= movie.runtime_in_minutes %> minutes</h4>
  <hr>
  <p class="description"><%= movie.description %></p>
<% end %></li>
</ul>